{
  "name": "faiyt-astal-shell",
  "version": "1.0.0",
  "description": "UI Recreation for AGS/Hyprland",
  "main": "src/app.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:app": "vite build",
    "build": "bun build:app",
    "start:app": "ags run dist/app.js",
    "debug:app": "GTK_DEBUG=interactive ags run dist/app.js",
    "start": "bun build && bun start:app",
    "dev": "ags run",
    "validate": "bun validate:types",
    "validate:types": "tsc --noEmit",
    "clear": "rm -rf dist @types"
  },
  "keywords": [
    "ags",
    "typescript",
    "gtk"
  ],
  "author": "Dane L Miller",
  "devDependencies": {
    "bun-types": "^1.2.13",
    "sass": "^1.89.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@girs/gjs": "^4.0.0-beta.23",
    "@girs/gtk-4.0": "^4.18.3-4.0.0-beta.23",
    "astal": "/usr/share/astal/gjs",
    "csstype": "^3.1.3"
  }
}
